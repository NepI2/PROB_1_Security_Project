        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock HorizontalAlignment="Center" Foreground="White" Grid.Row="0" Margin="10" Text="Default Folders:" FontSize="16" FontWeight="Bold" />

            <Grid Grid.Row="2" Margin="100,0,100,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Foreground="White" Grid.Column="0" Text="RSA Key:" VerticalAlignment="Center" />
                <Button Grid.Column="2" x:Name="RSAKeysFolderBtn" Padding="5" Click="RSAKeysFolderBtn_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Choose Folder" />
                        <!--<SymbolIcon Symbol="FolderOpen" Margin="5,0,0,0" />-->
                    </StackPanel>
                </Button>
            </Grid>
            <Grid Grid.Row="3" Margin="100,10,100,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Foreground="White" Grid.Column="0" Text="AES Key:" VerticalAlignment="Center" />
                <Button Grid.Column="2" x:Name="AESKeysFolderBtn" Padding="5" Click="AESKeysFolderBtn_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Choose Folder" />
                        <!--<SymbolIcon Symbol="FolderOpen" Margin="5,0,0,0" />-->
                    </StackPanel>
                </Button>
            </Grid>
            <Grid Grid.Row="4" Margin="100,10,100,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Foreground="White" Grid.Column="0" Text="Encrypted files:" VerticalAlignment="Center" />
                <Button Grid.Column="2" x:Name="EncriptedFilesFolder" Padding="5" Click="EncriptedFilesFolderBtn_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Choose Folder" />
                        <!--<SymbolIcon Symbol="FolderOpen" Margin="5,0,0,0" />-->
                    </StackPanel>
                </Button>
            </Grid>
            <Grid Grid.Row="5" Margin="100,10,100,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Foreground="White" Grid.Column="0" Text="Decrypted files:" VerticalAlignment="Center" />
                <Button Grid.Column="2" x:Name="DecriptedFilesFolder" Padding="5" Click="DecriptedFilesFolderBtn_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Choose Folder" />
                        <!--<SymbolIcon Symbol="FolderOpen" Margin="5,0,0,0" />-->
                    </StackPanel>
                </Button>
            </Grid>
            <Grid Grid.Row="6" Margin="100,10,100,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Foreground="White" Grid.Column="0" Text="Choosing files:" VerticalAlignment="Center" />
                <Button Grid.Column="2" x:Name="ChoosingFilesFolder" Padding="5" Click="ChoosingFilesFolderBtn_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Choose Folder" />
                        <!--<SymbolIcon Symbol="FolderOpen" Margin="5,0,0,0" />-->
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </Grid>
